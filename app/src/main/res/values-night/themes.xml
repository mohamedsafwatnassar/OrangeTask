<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OrangeTask" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/space_14x_sp</item>
        <item name="popupMenuBackground">@color/white</item>
    </style>

    <style name="CustomCardView">
        <item name="cardCornerRadius">@dimen/space_2x</item>
        <item name="cardElevation">@dimen/space_0_5x</item>
        <item name="cardBackgroundColor">@color/accent_dark</item>
    </style>

    <style name="MenuTextStyleLight">
        <!-- Define properties for light mode menu items -->
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="queryHint">@string/search_for_news_by_title</item>
        <item name="queryBackground">@null</item>
        <item name="searchHintIcon">@drawable/ic_search</item>
    </style>

    <style name="CustomBackgroundConstraint">
        <item name="android:background">@color/accent_dark</item>
    </style>

    <style name="textStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/space_3x</item>
    </style>
</resources>